<!-- app/views/appointments/_form.html.erb -->
<%= form_with(model: appointment, local: true) do |form| %>
  <div class="field">
    <%= form.label :doctor_id %>
    <%= form.number_field :doctor_id %>
  </div>

  <div class="field">
    <%= form.label :patient_id %>
    <%= form.number_field :patient_id %>
  </div>

  <div class="field">
    <%= form.label :appointment_date %>
    <%= form.date_field :appointment_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
